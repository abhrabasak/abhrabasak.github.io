---
import SkillDomain from "./SkillDomain.astro";
import Icons8 from "../../icons/icons8/Icons8.astro";
import HorizontalRule from "../Html/HorizontalRule.astro";

import "./expertise.scss";
import code from "./code.json";
import domains from "./dev-skills.json";
---

<main class="code view">
  <section class="skills-intro">
    <h4>Skills and Experience</h4>
    <p>
      An overview of my software development skills. My development portfolio
      has code samples.
    </p>
    <div class="dev-profiles">
      {
        Object.entries(code.icons).map(([key, icon]) => (
          <Icons8 iconName={icon.icon} link={icon.profile} site={key} />
        ))
      }
    </div>
  </section>
  <HorizontalRule />
  <section class="skills-categories">
    {domains.map((dm) => <SkillDomain {...dm} />)}
  </section>
  <!-- <section class="certifications"></section> -->
</main>
