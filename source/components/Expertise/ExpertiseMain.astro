---
import SkillDomain from "./SkillDomain.astro";
import HorizontalRule from "../Html/HorizontalRule.astro";
import Certification from "./Certification.astro";
import IconResolver from "../Html/IconResolver.astro";

import icons from "@icons/hyper.yml";
import devY from "./dev.yml";
const dev = devY as { profiles: string[]; skills: Record<string, string[]> };
const skillTypes = Object.entries(dev.skills).filter(
  ([t, _]) => !t.startsWith("_")
);

import "./expertise.tw.css";
---

<main class="code view">
  <section class="skills-intro">
    <h1>Skills and Experience</h1>
    <p>
      An overview of my software development skills. My development portfolio
      has code samples.
    </p>
    <div class="dev-profiles">
      {dev.profiles.map((p) => <IconResolver {...icons[p]} />)}
    </div>
  </section>
  <HorizontalRule />
  <section class="skills-categories">
    {skillTypes.map(([t, s]) => <SkillDomain title={t} skills={s} />)}
  </section>
  <HorizontalRule />
  <Certification />
</main>
