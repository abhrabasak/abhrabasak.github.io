---
import ProjectCard from "./ProjectCard.astro";
import ExperienceCard from "./ExperienceCard.astro";
import HorizontalRule from "../Html/HorizontalRule.astro";

import { L, type ProjectRecord } from "./Project";
import type { Experience } from "./Experience";
import acadPY from "./academic-projects.yml";
import workexpY from "./work-experience.yml";
const acadProj = L(acadPY as ProjectRecord);
const workexp = workexpY as Experience[];

import "./experience.tw.css";
---

<main class="projects view">
  <section class="projects-intro">
    <h1>Portfolio</h1>
    <p>
      A list of stuff I've worked on and contributed to till date. I personally
      attempt to use a different set of technologies for each individual
      project. Each new project presents the opportunity to push limits
      creatively and technically.
    </p>
  </section>
  <HorizontalRule />
  <section class="work-exp">
    <h1>Work Experience</h1>
    <p>
      A brief overview of my professional experience. I've worked with a variety
      of companies and clients, and have had the opportunity to contribute to a
      wide range of projects.
    </p>
    <div class="work-exp-timeline">
      {workexp.map((exp) => <ExperienceCard {...exp} />)}
    </div>
  </section>
  <HorizontalRule />
  <section class="personal-projects"></section>
  <section class="acad-projects">
    <h1>Academic Projects</h1>
    <p>
      Here are some of the academic projects that I pursued at my university.
      These have allowed me to apply theory to practice and have contributed
      significantly to my learning and growth.
    </p>
    <div class="acad-proj-list">
      {acadProj.map(([_, p]) => <ProjectCard {...p} />)}
    </div>
  </section>
  <section class="competitions"></section>
</main>
