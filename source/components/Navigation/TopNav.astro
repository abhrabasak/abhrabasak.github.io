---
import LineAwesome from "../../icons/lineawesome/LineAwesome.astro";
import pagesYaml from "./pages.yml";

const pages = pagesYaml as Record<string, { url: string; icon: string }>;
const { pathname } = Astro.url;
---

<header>
  <nav class="site-header-nav">
    {
      Object.entries(pages).map(([name, p]) => (
        <a href={p.url} data-active={pathname === p.url}>
          <span class="name">{name}</span>
          <span class="icon">
            <LineAwesome icon={p.icon} />
          </span>
        </a>
      ))
    }
  </nav>
</header>
